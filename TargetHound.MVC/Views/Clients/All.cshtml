@model TargetHound.SharedViewModels.ViewModels.ClientListModel

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid d-flex flex-column">
    <h1 class="text-center my-5">My Clients</h1>

    <table class="table table-active col-6 offset-3">
        <thead>
            <tr>
                <td>
                    <h4 class="text-center">Client Name</h4>
                </td>
                <td>
                    <h4 class="text-center">Actions</h4>
                </td>
            </tr>
        </thead>
        <tbody class="table-active">
            @foreach (var item in Model.Clients)
            {
                <tr>
                    <td class="text-center">
                        @item.Name
                    </td>
                    <td class="d-flex justify-content-around">
                        <a class="btn btn-primary" asp-action="Edit" asp-route-clientId="@item.Id">Edit</a>
                        <a class="btn btn-primary" asp-action="AddUser" asp-route-clientId="@item.Id">Add User</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-clientId="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
