@model IEnumerable<TargetHound.SharedViewModels.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-md-5">Manage Project Users</h1>


<table class="table table-active text-center">
    <thead>
        <tr>
            <th>
                Username
            </th>
            <th>
                Email
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var user in Model) {
        <tr>
            <td>
                @user.UserName
            </td>
            <td>
                @user.Email
            </td>
            <td>
                <a class="btn btn-primary">Promote to admin</a>
                <a class="btn btn-danger">Remove</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p class="my-md-4">
    <a class="btn btn-primary" asp-route-projectId="@ViewData["projectId"]" asp-action="AddUser">Add User</a>
</p>

<p class="my-4">
    <a class="btn btn-outline-info offset-md-10" asp-action="Load">Back to List</a>
</p>
