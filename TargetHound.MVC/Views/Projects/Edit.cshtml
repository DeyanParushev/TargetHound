@model TargetHound.SharedViewModels.InputModels.ProjectEditInputModel

@{
    ViewData["Title"] = "Target Hound - Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center my-5">Edit Project</h1>

<hr />
<div class="flex-row col-md-4 offset-md-4 my-4">
    <form class="" asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MagneticDeclination" class="control-label"></label>
            <input asp-for="MagneticDeclination" class="form-control" />
            <span asp-validation-for="MagneticDeclination" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label class="control-label" asp-for="CountryId">Country</label>
            <br />
            <select asp-for="@Model.Countries">
                @foreach (var country in Model.Countries)
                {
                    if (country.Id == Model.CountryId)
                    {
                        <option selected="selected" value="@country.Id">@country.Name</option>
                    }
                    else
                    {
                        <option value="@country.Id">@country.Name</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-primary offset-7" asp-route-projectId="@Model.Id" asp-action="Users">Users</a>
        </div>
    </form>
</div>

<div>
    <a class="btn btn-outline-info offset-10" asp-controller="Projects" asp-action="Load">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
